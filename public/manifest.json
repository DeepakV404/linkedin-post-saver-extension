{
    "name": "PixelPal",
    "description": "Effortlessly Organize Your Saved LinkedIn Posts",
    "version": "0.0.0.2",
    "manifest_version": 3,
    "icons": {
        "16": "./images/16x16.png",
        "32": "./images/32x32.png",
        "48": "./images/48x48.png",
        "128": "./images/128x128.png"
    },
    
    "background": {
      "service_worker": "./background.js"
    },
    "action": {
        "default_popup": "./popup.html",
        "default_icons": {
            "16": "./images/16x16.png",
            "32": "./images/32x32.png",
            "48": "./images/48x48.png",
            "128": "./images/128x128.png"
        }
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "options_page": "index.html",
    "web_accessible_resources": [
        {
            "resources": [ "fonts/*" ],
            "matches": [ "https://www.linkedin.com/*" ]
        }
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://api.emailjs.com/*",
        "http://localhost:5000/*",
        "http://localhost:3000/*"
    ]
}
